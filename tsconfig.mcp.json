{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist-mcp",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "server.ts",
    "src/mcp/**/*.ts",
    "src/tools/**/*.ts",
    "src/chat/**/*.ts",
    "src/config.ts",
    "src/mcp-main.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}