{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist-mcp",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/server.ts",
    "src/mcp/**/*.ts",
    "src/tools/**/*.ts",
    "src/chat/**/*.ts",
    "src/config.ts"
  ],
  "exclude": ["node_modules"]
}