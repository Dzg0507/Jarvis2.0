# Jarvis 2.0 - Local Development Environment Configuration
# Copy this file to .env.local for local development overrides
# 
# This file is for local development settings that override .env values
# It should NOT be committed to version control

# =============================================================================
# LOCAL DEVELOPMENT OVERRIDES
# =============================================================================

# Development Mode Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Local Server Configuration
PORT=3000
HOST=localhost

# =============================================================================
# LOCAL AI SERVICE CONFIGURATION
# =============================================================================

# Use local/development AI settings
AI_MAX_RETRIES=1
AI_TIMEOUT=15000

# =============================================================================
# LOCAL STABLE DIFFUSION CONFIGURATION
# =============================================================================

# Local Stable Diffusion settings optimized for development
SD_ENABLED=true
SD_SERVER_URL=http://localhost:5001
SD_PRELOAD=false
SD_FALLBACK_OPENAI=true
SD_PRIORITY=1
SD_MAX_RETRIES=2
SD_HEALTH_TIMEOUT=3000
SD_FORCE_ONLY=false

# =============================================================================
# LOCAL MCP SERVER CONFIGURATION
# =============================================================================

# Local MCP server settings
MCP_SERVER_URL=http://localhost:8080
MCP_PORT=8080
MCP_TIMEOUT=5000
MCP_MAX_RETRIES=2

# =============================================================================
# LOCAL LOGGING CONFIGURATION
# =============================================================================

# Enhanced logging for development
LOG_LEVEL=debug
ENABLE_FILE_LOGGING=true

