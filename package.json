{
  "name": "jarvis-local",
  "version": "2.0.0",
  "private": true,
  "description": "An AI Desktop Assistant",
  "author": "Dzg",
  "main": "electron/main.js",
  "scripts": {
    "dev": "node scripts/start-all-services.js",
    "dev:concurrent": "concurrently \"npm:dev:sd\" \"npm:dev:mcp\" \"npm:dev:next\"",
    "dev:full": "node scripts/start-all-services.js",
    "dev:next": "next dev",
    "dev:mcp": "nodemon --watch src/**/*.ts --exec \"tsx src/mcp-main.ts\"",
    "dev:sd": "node scripts/start-stable-diffusion.js",
    "build": "npm run clean && next build && npm run build:mcp",
    "build:mcp": "tsc --project tsconfig.mcp.json --incremental false",
    "clean": "rimraf .next dist-mcp dist-electron",
    "prebuild": "npm run clean",
    "postbuild": "npm run verify-build",
    "verify-build": "node -e \"const fs=require('fs'); const files=['.next/BUILD_ID','dist-mcp/mcp-main.js']; files.forEach(f => { if (!fs.existsSync(f)) { console.error('Missing:', f); process.exit(1); } }); console.log('Build verification passed');\"",
    "start": "next start",
    "start:mcp": "node dist-mcp/server.js",
    "start:sd": "node scripts/start-stable-diffusion.js",
    "start:all": "concurrently \"npm:start\" \"npm:start:mcp\" \"npm:start:sd\"",
    "lint": "next lint",
    "dist": "npm run build && npm run package",
    "package": "electron-builder --win --x64",
    "package:all": "electron-builder --win --mac --linux",
    "build:simple": "node simple-build.js",
    "build:fix": "node fix-build-issues.js",
    "test:image-priority": "node scripts/test-image-generation-priority.js",
    "health": "node scripts/health-check.js",
    "health:wait": "node scripts/health-check.js wait stableDiffusion 120000",
    "health:sd": "node scripts/health-check.js check stableDiffusion",
    "setup": "node scripts/setup.js",
    "setup:python": "python -m pip install -r requirements.txt",
    "setup:python3": "python3 -m pip install -r requirements.txt",
    "setup:cuda": "python -m pip install -r requirements.txt --extra-index-url https://download.pytorch.org/whl/cu118",
    "ts-node": "ts-node",
    "test": "vitest src"
  },
  "build": {
    "appId": "com.jarvis.desktop",
    "asar": true,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,h,obj,cc,cpp,c,d,gyp,gypi,rc,in,sh,tlog,tsbuildinfo}",
      "!dist-electron",
      "!.git",
      "!LICENSE.md",
      "!src",
      "!*.md",
      "!*.log"
    ],
    "extraResources": [
      {
        "from": "dist-mcp",
        "to": "dist-mcp"
      }
    ]
  },
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.13.0",
    "@google-cloud/text-to-speech": "^6.3.0",
    "@google/generative-ai": "^0.14.1",
    "@hookform/resolvers": "^5.2.1",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.56.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookies-next": "^4.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.2.1",
    "form-data": "^4.0.1",
    "groq-sdk": "^0.30.0",
    "is-plain-object": "^5.0.0",
    "lucide-react": "^0.542.0",
    "marked": "^15.0.8",
    "multer": "^1.4.5-lts.1",
    "next": "^14.2.32",
    "node-fetch": "^2.7.0",
    "openai": "^5.16.0",
    "puppeteer": "^24.17.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "selenium-webdriver": "^4.35.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/is-plain-object": "^0.0.3",
    "@types/marked": "^5.0.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/selenium-webdriver": "^4.1.22",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.9",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  }
}
